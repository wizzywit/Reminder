<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:id="@+id/custom_root_layout"
    android:background="@color/green"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:text="Reminder"
        android:id="@+id/custom_tittle"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="24sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/custom_edit_reminder"
        android:layout_margin="4dp"
        android:gravity="start"
        android:background="@color/light_grey"
        android:textColor="@color/black" ><requestFocus />
    </EditText>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/custom_check_box"
        android:layout_margin="4dp"
        android:background="@color/black"
        android:text="Important"
        android:paddingLeft="32dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:id="@+id/custom_button_commit"
            android:layout_height="60dp"
            android:layout_weight="50"
            android:text="Commit"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="0dp"
            android:id="@+id/custom_button_cancel"
            android:layout_height="60dp"
            android:layout_weight="50"
            android:text="Cancel"
            android:textColor="@color/white"/>


    </LinearLayout>

</LinearLayout>